  <div>
    ¡Error al crear el proyecto!...Por favor rellene todos los campos.
  </div>
</div>
    <%= flash[:alert] %>
<% end %>
    


<%= form_with(model: manager, local: true) do |f| %>
    <div class="form-group">
        <%= f.label :project, "Nombre del Proyecto" %>
        <%= f.text_field :project, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :description, "Descripción" %>
        <%= f.text_field :description, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :state, "Estado" %>
        <%= f.select :state, Manager.states.keys, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :start_date, "Fecha de Inicio" %>
        <%= f.datetime_field :start_date, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :end_date, "Fecha de Término" %>
        <%= f.datetime_field :end_date, class: "form-control" %>
    </div>
 <br><%= f.submit "Ingresar", class: "btn btn-primary" %>
<% end %>